{
  "name": "vpaid-ad",
  "version": "2.0.1",
  "description": "VPAID ad class for extending purposes.",
  "main": "lib/index.js",
  "scripts": {
    "coverage-ci": "codecov && rm -rf ./coverage",
    "lint": "standard",
    "babel": "./node_modules/.bin/babel -d lib src",
    "browserify": "browserify src/index.js -o dist/vpaid-ad.js",
    "watchify": "watchify src/index.js -o dist/vpaid-ad.js",
    "build": "npm run lint && npm run babel && npm run browserify",
    "test-ci": "CI=true && karma start",
    "test": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahwee/vpaid-ad.git"
  },
  "author": "KahWee Teng <t@kw.sg>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kahwee/vpaid-ad/issues"
  },
  "homepage": "https://github.com/kahwee/vpaid-ad#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-istanbul": "^0.11.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "karma": "1.1.2",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "mocha": "^3.0.2",
    "standard": "^7.1.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "standard": {
    "ignore": [
      "scripts/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "lib/**"
    ],
    "globals": [
      "after",
      "parent",
      "describe",
      "it",
      "expect",
      "before"
    ]
  },
  "keywords": [
    "ad",
    "ads",
    "adtech",
    "advertisement",
    "advertising",
    "debugging",
    "flash",
    "iab",
    "ima",
    "unit",
    "vast",
    "vast",
    "vpaid"
  ],
  "dependencies": {
    "tiny-emitter": "^1.1.0"
  }
}
